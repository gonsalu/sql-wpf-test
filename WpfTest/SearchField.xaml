<UserControl x:Class="WpfTest.SearchField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTest"
			 xmlns:fa="http://schemas.fontawesome.io/icons/"			 
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="300" >
    <Canvas Height="36" Width="300" Margin="1">
        <TextBlock Name="_label"  Canvas.Left="0" Width="300" Height="36" FontSize="18" Padding="5" Foreground="#FFA0A0A0">
			Find tables, functions, views, etc
		</TextBlock>
        <TextBox x:Name="_textBox" Canvas.Left="0" Width="300" 
				 Height="36" Background="Transparent"
				 FocusableChanged="_textBox_FocusableChanged"
				 TextChanged="_textBox_TextChanged"
				 KeyDown="_textBox_KeyDown"
				 KeyUp="_textBox_KeyUp"
				 FontSize="18"
				 Padding="3,5,5,3"
				 />
    </Canvas>
</UserControl>
